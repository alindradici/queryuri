//creare tabel postare

CREATE TABLE postare
(
  mesaj character(20),
  data_postarii date,
  id integer
  CONSTRAINT postare_pk PRIMARY KEY (id)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE postare
  OWNER TO fasttrackit_dev;

//populare tabel postare

INSERT INTO postare (mesaj,data_postarii,id) VALUES
