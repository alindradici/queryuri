//creare tabel user

CREATE TABLE facebook_user
(
  user_name character(20),
  parola character(20),
  varsta integer,
  orasul character(20),
  blocat boolean,
  id bigserial NOT NULL,
  CONSTRAINT user_pk PRIMARY KEY (id)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE facebook_user
  OWNER TO fasttrackit_dev;

